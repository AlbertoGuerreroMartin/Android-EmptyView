<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorButtonNormal">@color/primary</item>
        <item name="android:windowBackground">@color/windowBackground</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="BasicEmptyView">
        <item name="emptyText">@string/empty</item>
        <item name="errorText">@string/error</item>
        <item name="textSizeSP">@integer/textSize</item>
        <item name="textPadding">@dimen/textPadding</item>
        <item name="fadeAnimation">false</item>
    </style>

    <style name="CustomEmptyView">
        <item name="emptyLayout">@layout/empty</item>
        <item name="errorLayout">@layout/error</item>
        <item name="loadingLayout">@layout/loading</item>
    </style>

    <style name="TabStrip">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:elevation">4dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="pstsIndicatorColor">?colorAccent</item>
        <item name="pstsDividerColor">?colorAccent</item>
        <item name="pstsUnderlineColor">?colorAccent</item>
        <item name="pstsTextColorSelected">?colorAccent</item>
        <item name="pstsShouldExpand">true</item>
    </style>

</resources>
